{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "rootDir": "./",
        "outDir": "./build",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "removeComments": true,
        "alwaysStrict": true,
        "checkJs": true,
        "disableSizeLimit": true,
        "useDefineForClassFields": true
    }
}
